let mapleader = ','

inoremap <leader>w <Esc>:w<CR>

syntax on
set nu
set nocompatible
set hls
set laststatus=2
set background=dark

colorscheme gruvbox


set tabstop=4
set autoindent
set autoread
set history=400
set confirm
set smartindent
set shiftwidth=4
set cursorline cursorcolumn
set guicursor=n-c-v:ver50-ncvCursor
set guicursor=i:block-iCursor-blinkon0,v:block-vCursor

" é…è‰²æ–¹æ¡ˆ
" set t_Co=256 " è®¾ç½®Vimæ”¯æŒ256è‰²,ä¸Šæ–‡å·²ä»‹ç»è¿‡
